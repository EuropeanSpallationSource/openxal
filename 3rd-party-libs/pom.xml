<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.xal</groupId>
        <artifactId>openxal</artifactId>
        <version>1.1.2-SNAPSHOT</version>
    </parent>

    <artifactId>openxal.3rd-party-libs</artifactId>
    <version>1.1.2-SNAPSHOT</version>
        
    <packaging>jar</packaging>

    <build>
        <plugins>
            <!-- This plugin will package all dependencies into one jar -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.1.0</version>              
                <configuration>
                    <artifactSet>
                    </artifactSet>
                </configuration>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    
    <repositories>
        <repository>
            <id>epics</id>
            <name>EPICS Repository</name>
            <url>http://epics.sourceforge.net/maven2/</url>
        </repository>
        <repository>
            <id>project</id>
            <url>file://${project.basedir}/../apps/pta/lib</url>
        </repository>
    </repositories>

    <dependencies>
        <dependency>
            <groupId>org.epics</groupId>
            <artifactId>pvDataJava</artifactId>
            <version>5.0.1</version>
        </dependency>
        <dependency>
            <groupId>org.epics</groupId>
            <artifactId>pvAccessJava</artifactId>
            <version>4.1.1</version>
        </dependency>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
            <version>3.5</version>
        </dependency>
        <dependency>
            <groupId>org.gillius</groupId>
            <artifactId>jfxutils</artifactId>
            <version>1.0</version>
        </dependency>
        <dependency>
            <groupId>com.cosylab</groupId>
            <artifactId>cf-gui</artifactId>
            <version>1.0</version>
        </dependency>
    </dependencies>
</project>
