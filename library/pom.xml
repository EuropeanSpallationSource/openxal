<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.xal</groupId>
        <artifactId>openxal</artifactId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>

    <artifactId>openxal.library</artifactId>
    <version>1.0.0-SNAPSHOT</version>

    <packaging>jar</packaging>

    <build>
        <plugins>
            <!-- This plugin will package all dependencies into one jar -->

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>2.2</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <artifactSet>
                            </artifactSet>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
 
            <!-- This will copy all applications jars to the target directory -->
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-applications</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}</outputDirectory>
                            <overwrite>true</overwrite>
                            <resources>
                                <resource><directory>../apps/bricks/target</directory><includes><include>*.jar</include></includes></resource>
                                <resource><directory>../apps/dbbrowser/target</directory><includes><include>*.jar</include></includes></resource>
                                <resource><directory>../apps/extlatgenerator/target</directory><includes><include>*.jar</include></includes></resource>
                                <resource><directory>../apps/knobs/target</directory><includes><include>*.jar</include></includes></resource>
                                <resource><directory>../apps/launcher/target</directory><includes><include>*.jar</include></includes></resource>
                                <resource><directory>../apps/machinesimulator/target</directory><includes><include>*.jar</include></includes></resource>
                                <resource><directory>../apps/mtv/target</directory><includes><include>*.jar</include></includes></resource>
                                <resource><directory>../apps/opticseditor/target</directory><includes><include>*.jar</include></includes></resource>
                                <resource><directory>../apps/opticsswitcher/target</directory><includes><include>*.jar</include></includes></resource>
                                <resource><directory>../apps/orbitcorrect/target</directory><includes><include>*.jar</include></includes></resource>
                                <resource><directory>../apps/packaging/target</directory><includes><include>*.jar</include></includes></resource>
                                <resource><directory>../apps/pvhistogram/target</directory><includes><include>*.jar</include></includes></resource>
                                <resource><directory>../apps/pvlogger/target</directory><includes><include>*.jar</include></includes></resource>
                                <resource><directory>../apps/scan1d/target</directory><includes><include>*.jar</include></includes></resource>
                                <resource><directory>../apps/scan2d/target</directory><includes><include>*.jar</include></includes></resource>
                                <resource><directory>../apps/scope/target</directory><includes><include>*.jar</include></includes></resource>
                                <resource><directory>../apps/virtualaccelerator/target</directory><includes><include>*.jar</include></includes></resource>
                                <resource><directory>../apps/xyzcorrelator/target</directory><includes><include>*.jar</include></includes></resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>org.xal</groupId>
            <artifactId>openxal.extensions.widgets</artifactId>
            <version>1.0.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>org.xal</groupId>
            <artifactId>openxal.extensions.bricks</artifactId>
