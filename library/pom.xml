        </dependency>
        <dependency>
            <groupId>org.xal</groupId>
            <artifactId>openxal.extensions.service</artifactId>
        </dependency>
        <dependency>
            <groupId>org.xal</groupId>
            <artifactId>openxal.extensions.application</artifactId>
        </dependency>
        <dependency>
            <groupId>org.xal</groupId>
            <artifactId>openxal.extensions.pvlogger</artifactId>
        </dependency>
        <dependency>
            <groupId>org.xal</groupId>
            <artifactId>openxal.extensions.extlatgen</artifactId>
        </dependency>
        <dependency>
            <groupId>org.xal</groupId>
            <artifactId>openxal.extensions.solver</artifactId>
        </dependency>
        <dependency>
            <groupId>org.xal</groupId>
            <artifactId>openxal.extensions.fit</artifactId>
        </dependency>
        <dependency>
            <groupId>org.xal</groupId>
            <artifactId>openxal.extensions.orbit</artifactId>
        </dependency>
        <dependency>
            <groupId>org.xal</groupId>
            <artifactId>openxal.extensions.recordselector</artifactId>
        </dependency>
        <dependency>
            <groupId>org.xal</groupId>
            <artifactId>openxal.extensions.scan</artifactId>
