<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.xal</groupId>
        <artifactId>openxal</artifactId>
        <version>1.0.2-SNAPSHOT</version>
    </parent>

    <artifactId>openxal.library</artifactId>
    <version>1.0.2-SNAPSHOT</version>

    <packaging>jar</packaging>

    <build>
        <plugins>
            <!-- This plugin will package all dependencies into one jar -->

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>2.2</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <artifactSet>
                            </artifactSet>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
 
            <!-- This will copy all applications jars to the target directory -->
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <version>2.6</version>
                <executions>
                    <execution>
                        <id>copy-applications</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
				<configuration>
				    <outputDirectory>${project.build.directory}</outputDirectory>
				    <overwrite>true</overwrite>
				    <resources>
					<resource><directory>../apps/bricks/target</directory><includes><include>openxal.apps.bricks-${project.version}.jar</include></includes></resource>
					<resource><directory>../apps/dbbrowser/target</directory><includes><include>openxal.apps.dbbrowser-${project.version}.jar</include></includes></resource>
					<resource><directory>../apps/extlatgenerator/target</directory><includes><include>openxal.apps.extlatgenerator-${project.version}.jar</include></includes></resource>
					<resource><directory>../apps/knobs/target</directory><includes><include>openxal.apps.knobs-${project.version}.jar</include></includes></resource>
					<resource><directory>../apps/launcher/target</directory><includes><include>openxal.apps.launcher-${project.version}.jar</include></includes></resource>
					<resource><directory>../apps/machinesimulator/target</directory><includes><include>openxal.apps.machinesimulator-${project.version}.jar</include></includes></resource>
					<resource><directory>../apps/mtv/target</directory><includes><include>openxal.apps.mtv-${project.version}.jar</include></includes></resource>
					<resource><directory>../apps/opticseditor/target</directory><includes><include>openxal.apps.opticseditor-${project.version}.jar</include></includes></resource>
					<resource><directory>../apps/opticsswitcher/target</directory><includes><include>openxal.apps.opticsswitcher-${project.version}.jar</include></includes></resource>
					<resource><directory>../apps/orbitcorrect/target</directory><includes><include>openxal.apps.orbitcorrect-${project.version}.jar</include></includes></resource>
					<resource><directory>../apps/pvhistogram/target</directory><includes><include>openxal.apps.pvhistogram-${project.version}.jar</include></includes></resource>
					<resource><directory>../apps/pvlogger/target</directory><includes><include>openxal.apps.pvlogger-${project.version}.jar</include></includes></resource>
					<resource><directory>../apps/scan1d/target</directory><includes><include>openxal.apps.scan1d-${project.version}.jar</include></includes></resource>
					<resource><directory>../apps/scan2d/target</directory><includes><include>openxal.apps.scan2d-${project.version}.jar</include></includes></resource>
					<resource><directory>../apps/scope/target</directory><includes><include>openxal.apps.scope-${project.version}.jar</include></includes></resource>
					<resource><directory>../apps/virtualaccelerator/target</directory><includes><include>openxal.apps.virtualaccelerator-${project.version}.jar</include></includes></resource>
					<resource><directory>../apps/xyzcorrelator/target</directory><includes><include>openxal.apps.xyzcorrelator-${project.version}.jar</include></includes></resource>
				    </resources>
				</configuration>
			    </execution>
			</executions>
		    </plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
		    <groupId>org.xal</groupId>
		    <artifactId>openxal.extensions.widgets</artifactId>
		</dependency>
		<dependency>
		    <groupId>org.xal</groupId>
		    <artifactId>openxal.extensions.bricks</artifactId>
		</dependency>
		<dependency>
		    <groupId>org.xal</groupId>
		    <artifactId>openxal.extensions.service</artifactId>
		</dependency>
		<dependency>
		    <groupId>org.xal</groupId>
		    <artifactId>openxal.extensions.application</artifactId>
		</dependency>
		<dependency>
		    <groupId>org.xal</groupId>
		    <artifactId>openxal.extensions.pvlogger</artifactId>
		</dependency>
		<dependency>
		    <groupId>org.xal</groupId>
		    <artifactId>openxal.extensions.extlatgen</artifactId>
		</dependency>
		<dependency>
		    <groupId>org.xal</groupId>
		    <artifactId>openxal.extensions.solver</artifactId>
		</dependency>
		<dependency>
		    <groupId>org.xal</groupId>
		    <artifactId>openxal.extensions.fit</artifactId>
		</dependency>
		<dependency>
		    <groupId>org.xal</groupId>
		    <artifactId>openxal.extensions.orbit</artifactId>
		</dependency>
		<dependency>
		    <groupId>org.xal</groupId>
		    <artifactId>openxal.extensions.recordselector</artifactId>
		</dependency>
		<dependency>
		    <groupId>org.xal</groupId>
		    <artifactId>openxal.extensions.scan</artifactId>
		</dependency>
		<dependency>
		    <groupId>org.xal</groupId>
		    <artifactId>openxal.extensions.worker</artifactId>
		</dependency>
		<dependency>
		    <groupId>org.xal</groupId>
		    <artifactId>openxal.plugins.jca</artifactId>
		</dependency>
		<dependency>
	    <groupId>org.xal</groupId>
	    <artifactId>openxal.plugins.postgres</artifactId>
		</dependency>
		<dependency>
			<groupId>se.lu.esss.ics.jels</groupId>
			<artifactId>jels</artifactId>
		</dependency>
	</dependencies>
</project>
