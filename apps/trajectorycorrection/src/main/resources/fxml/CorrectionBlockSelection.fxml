<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="401.0" prefWidth="487.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="xal.app.trajectorycorrection.CorrectionBlockSelectionController">
   <children>
      <VBox alignment="CENTER" prefHeight="400.0" prefWidth="450.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
               <children>
                  <VBox alignment="CENTER" prefHeight="400.0" prefWidth="225.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Correction Blocks:">
                           <VBox.margin>
                              <Insets bottom="10.0" top="10.0" />
                           </VBox.margin>
                        </Label>
                        <ListView fx:id="listViewBlockDefinition" editable="true" onContextMenuRequested="#handleContextMenu" prefHeight="300.0" VBox.vgrow="ALWAYS">
                           <VBox.margin>
                              <Insets left="10.0" right="5.0" />
                           </VBox.margin>
                        </ListView>
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="362.0" prefWidth="11.0">
                     <children>
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#handleSelectedBlock" text="&gt;">
                           <VBox.margin>
                              <Insets bottom="10.0" />
                           </VBox.margin>
                        </Button>
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#handleRemoveSelectedBlock" text="&lt;" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
                     <children>
                        <Label text="Selection:">
                           <VBox.margin>
                              <Insets bottom="10.0" top="10.0" />
                           </VBox.margin>
                        </Label>
                        <ListView fx:id="listViewBlockSelection" editable="true" prefHeight="300.0" prefWidth="210.0" VBox.vgrow="ALWAYS">
                           <VBox.margin>
                              <Insets left="5.0" right="10.0" />
                           </VBox.margin>
                        </ListView>
                     </children>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </VBox>
               </children>
            </HBox>
            <ToolBar nodeOrientation="RIGHT_TO_LEFT" prefHeight="40.0" prefWidth="200.0">
               <items>
                  <Button mnemonicParsing="false" onAction="#handleButtonSelect" text="Select" />
                  <Button mnemonicParsing="false" onAction="#handleButtonCancel" text="Cancel" />
               </items>
            </ToolBar>
         </children>
      </VBox>
   </children>
</AnchorPane>
