<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.xal</groupId>
		<artifactId>openxal.apps.packaging</artifactId>
		<version>1.0.1-SNAPSHOT</version>
	</parent>

	<groupId>se.esss.codac.units</groupId>
	<artifactId>openxal-launcher</artifactId>
	<version>1.1</version>

	<packaging>codac</packaging>
	<name>Launcher</name>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-iter-plugin</artifactId>

				<configuration>
					<packaging>
						<package>
							<dependency>java-${java.version}-${java.vendor}</dependency>
							<requires version="current">%{codac_rpm_prefix}-openxal-core</requires>	
							<requires version="current">%{codac_rpm_prefix}-openxal-ess-data</requires>												
							<include type="file" source="openxal-launcher/openxal.apps.launcher-${openxal.version}.jar" target="lib/openxal/" />
							<include type="file" source="main/desktop/openxal-launcher.desktop" target="common/desktop/" />
							<include type="altlink" altpath="%{_usr}/share/applications/openxal-launcher.desktop" targetroot="CODAC_ROOT" target="common/desktop/openxal-launcher.desktop" />
							<include type="script" file="launcher.sh" scripttype="user" name="launcher" />
							<include type="config" source="main/conf/xal.app.launcher" target="openxal/" />
							<include type="config" source="main/conf/main.launch" target="openxal/" />
						</package>
					</packaging>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-resources-1</id>
						<phase>validate</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.directory}/openxal-launcher</outputDirectory>
							<resources>
								<resource>
									<directory>${project.basedir}/../../launcher/target</directory>
									<include>openxal.apps.launcher-${openxal.version}.jar</include>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
