<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>se.esss.codac.units</groupId>
	<artifactId>openxal-bricks</artifactId>
	<packaging>codac</packaging>
	<version>1.0</version>
	<name>Bricks</name>

	<parent>
		<groupId>org.iter.codac.units</groupId>
		<artifactId>maven-iter-settings</artifactId>
		<version>4.1.0</version>
	</parent>

	<properties>
		<unit.type>module</unit.type>
		
		<openxal.version>1.0.0-SNAPSHOT</openxal.version>
		
	</properties>

	<developers>
		<developer>
			<id>miroslavpavleski</id>
			<roles>
				<role>unit owner</role>
			</roles>
		</developer>
	</developers>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-iter-plugin</artifactId>

				<configuration>
					<packaging>
						<package>
							<dependency>java-${java.version}-${java.vendor}</dependency>
							<requires version="current">%{codac_rpm_prefix}-openxal-core</requires>	
							<requires version="current">%{codac_rpm_prefix}-openxal-ess-data</requires>												
							<include type="file" source="openxal-bricks/openxal.apps.bricks-${openxal.version}.jar" target="lib/openxal/" />
							<include type="file" source="main/desktop/openxal-bricks.desktop" target="common/desktop/" />
							<include type="altlink" altpath="%{_usr}/share/applications/openxal-bricks.desktop" targetroot="CODAC_ROOT" target="common/desktop/openxal-bricks.desktop" />
							<include type="script" file="bricks.sh" scripttype="user" name="bricks" />
						</package>
					</packaging>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-resources-1</id>
						<phase>validate</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.directory}/openxal-bricks</outputDirectory>
							<resources>
								<resource>
									<directory>${project.basedir}/../../bricks/target</directory>
									<include>openxal.apps.bricks-1.0.0-SNAPSHOT.jar</include>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
