<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="xal.application.pvserver.FXMLController">
    <children>
      <VBox>
         <children>
            <TableView fx:id="pvTableView" editable="true">
              <columns>
                <TableColumn fx:id="pvNameColumn" minWidth="300.0" prefWidth="75.0" text="PV name" />
                <TableColumn fx:id="pvReadColumn" prefWidth="75.0" text="Read" />
                  <TableColumn fx:id="pvWriteColumn" prefWidth="75.0" text="Write" />
                  <TableColumn fx:id="pvValuecolumn" prefWidth="75.0" text="Value" />
              </columns>
            </TableView>
            <GridPane>
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                          <Button fx:id="addPVButton" onAction="#handleAddPVButtonAction" text="+" />
                        <Button fx:id="removePVButton" onAction="#handleRemovePVButtonAction" text="-" />
                     </children>
                  </HBox>
                  <Button fx:id="startServerButton" onAction="#handleStartServerButtonAction" text="Start server" GridPane.columnIndex="2" />
               </children>
            </GridPane>
         </children>
      </VBox>
    </children>
</AnchorPane>
