<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.xal</groupId>
		<artifactId>openxal-packaging</artifactId>
		<version>1.4</version>
		<relativePath>../../packaging/pom.xml</relativePath>
	</parent>
	
	<groupId>se.esss.codac.units</groupId>
	<artifactId>openxal-core</artifactId>
	<version>1.4</version>

	<packaging>codac</packaging>

	<name>OpenXAL Core</name>

	<developers>
		<developer>
			<id>miroslavpavleski</id>
			<roles>
				<role>unit owner</role>
			</roles>
		</developer>
	</developers>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-iter-plugin</artifactId>

				<configuration>
					<packaging>
						<package>
							<dependency>java-${java.version}-${java.vendor}</dependency>
							<include type="file" source="openxal-core/openxal.library-${openxal.version}.jar" target="lib/openxal/" />
						</package>
					</packaging>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
                <version>2.6</version>
				<executions>
					<execution>
						<id>copy-resources-1</id>
						<phase>validate</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.directory}/openxal-core</outputDirectory>
							<resources>
								<resource>
									<directory>${project.basedir}/../../library/target</directory>
									<include>openxal.library-${openxal.version}.jar</include>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
