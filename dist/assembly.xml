<assembly>
    <id>dist</id>
    <!-- Define formats for distribution files -->
    <formats>
        <format>tar.gz</format>
        <format>zip</format>
        <format>dir</format>
    </formats>
    <!-- Files to include -->
    <fileSets>
        <!-- Open XAL library file -->
        <fileSet>
            <directory>../library/target</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>openxal.library-${project.version}.jar</include>
            </includes>
        </fileSet>
        <!-- Open XAL optics files-->
        <fileSet>
            <directory>../site/optics</directory>
            <outputDirectory>optics</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
        </fileSet>
        <!-- Open XAL applications -->
        <fileSet>
            <directory>../apps/target/dist</directory>
            <outputDirectory>apps</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
