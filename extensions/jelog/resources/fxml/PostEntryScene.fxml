<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefWidth="500.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="xal.extension.jelog.PostEntryController">
    <children>
        <VBox layoutX="4.0" layoutY="6.0" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0">
            <children>
            <GridPane>
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                      <Label text="Make an entry in eLog:">
                          <font>
                              <Font size="18.0" />
                          </font>
                      </Label>
                  <Button fx:id="switchUserButton" mnemonicParsing="false" onAction="#handleSwitchUserButton" text="Switch user" GridPane.columnIndex="1" />
               </children>
               <opaqueInsets>
                  <Insets bottom="5.0" left="5.0" right="5.0" />
               </opaqueInsets>
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </GridPane>
                <GridPane fx:id="gridPane" vgap="5.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="286.0" minWidth="10.0" prefWidth="198.0" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="382.0" minWidth="10.0" prefWidth="382.0" />
                    </columnConstraints>
                    <children>
                        <Label text="LogBook group" />
                        <ComboBox fx:id="comboBoxLogBookGroup" onAction="#comboBoxLogBookGroupHandler" prefHeight="27.0" GridPane.columnIndex="1" />
                        <Label text="LogBook" GridPane.rowIndex="1" />                  
                        <ComboBox fx:id="comboBoxLogBook" onAction="#comboBoxLogBookHandler" prefHeight="27.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    </children>
                    <VBox.margin>
                        <Insets left="5.0" right="5.0" />
                    </VBox.margin>
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>
                </GridPane>
                <Label text="Text:">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" />
               </VBox.margin></Label>
                <TextArea fx:id="textBody" prefHeight="160.0" prefWidth="470.0">
                    <VBox.margin>
                        <Insets left="5.0" right="5.0" />
                    </VBox.margin>
                </TextArea>
                <ButtonBar prefHeight="61.0" prefWidth="475.0">
                    <buttons>
                        <Button fx:id="buttonCancel" mnemonicParsing="false" onAction="#handleButtonCancel" text="Cancel" />
                        <Button fx:id="buttonSubmit" mnemonicParsing="false" onAction="#handleButtonSubmit" text="Submit" />
                    </buttons>
                    <VBox.margin>
                        <Insets right="5.0" />
                    </VBox.margin>               
                </ButtonBar>
            </children>
        </VBox>
    </children>
</AnchorPane>
